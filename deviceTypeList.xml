<!--
List the device type and their specifications
such as the way to authenticate
-->

<xml>
	<devices>
		<device>
			<name>ISR</name>
			<vendor>Cisco</vendor>
			<checktelnet>failed</checktelnet><!--to check if the telnet auth failed-->
			<howtoconnect><!--Used only with telnet connection-->
				<waitfor>Username:</waitfor>
				<write>device.user</write>
				<write>device.password</write>
			</howtoconnect>
			<secondaryhowtoconnect><!--Used only with telnet connection-->
				<waitfor>Username:</waitfor>
				<write>device.secondaryuser</write>
				<write>device.secondarypassword</write>
			</secondaryhowtoconnect>
			<howtosave>
				<write>copy running-config startup-config</write>
				<write></write>
				<waitfor>[OK]</waitfor>
			</howtosave>
			<howtoreboot>
				<write>reload</write>
				<write></write>
				<disconnect></disconnect>
			</howtoreboot>
